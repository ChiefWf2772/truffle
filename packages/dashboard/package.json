{
  "name": "@truffle/dashboard",
  "description": "Web-server component for signing CLI transactions with browser",
  "license": "MIT",
  "author": "Rosco Kalis <roscokalis@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/trufflesuite/truffle.git",
    "directory": "packages/dashboard"
  },
  "bugs": {
    "url": "https://github.com/trufflesuite/truffle/issues"
  },
  "version": "0.1.2",
  "main": "dist/lib/index.js",
  "browser": {
    "ws": false
  },
  "files": [
    "dist/bin",
    "dist/lib"
  ],
  "scripts": {
    "dev:next": "next dev",
    "build:next": "next build && next export",
    "build": "yarn build:next && yarn build:server && yarn copy:frontend",
    "build:server": "tsc -p tsconfig.server.json",
    "copy:frontend": "cpy out/** dist/lib/dashboard-frontend/ --parents --dot",
    "prepare": "yarn build",
    "start": "concurrently --kill-others \"yarn start:dev-server\" \"NODE_ENV=\"development\" yarn dev:next\"",
    "start:next": "next start",
    "start:dev-server": "ts-node --project tsconfig.server.json bin/start-dev-server.ts",
    "start:prebuilt": "node dist/bin/start-dev-server.js",
    "test": "jest"
  },
  "types": "dist/lib/index.d.ts",
  "dependencies": {
    "@truffle/dashboard-message-bus": "^0.1.0",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "express": "^4.17.1",
    "isomorphic-ws": "^4.0.1",
    "open": "^8.4.0",
    "ws": "^7.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^14.0.4",
    "@types/cors": "^2.8.12",
    "@types/ethereum-protocol": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/web3": "^1.2.2",
    "@types/ws": "^7.4.7",
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "axios": "0.26.1",
    "concurrently": "^6.5.1",
    "cpy-cli": "^3.1.1",
    "delay": "^5.0.0",
    "ethereum-protocol": "^1.0.1",
    "ethers": "^5.6.1",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.4",
    "jest": "^27.4.5",
    "next": "^12.1.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-json-view": "^1.21.3",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.4",
    "wagmi": "^0.2.21"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
